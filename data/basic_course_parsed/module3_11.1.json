  "suffixes": [
    {
      "form": "-xon",
      "meaning": "middle voice: to do something for another or in service of another",
      "usage": "Goes right after the root of a transitive verb; requires other suffixes (tenses, commands) to follow; requires a transitive pronoun (en, min, jan, etc.) before it; makes all verbs transitive in nature",
      "examples": [
        "ati + -xon- = axon (to do for another)",
        "axonbanon (will do it for another)",
        "axonai (I do it for another, present)",
        "iti + -xon- = ixon (to be for another)",
        "ixonbanon (will be it for another)",
        "kepenxonbanon (will open for another)",
        "weninxonbanon (will make stand for another)",
        "pontexonbanon (will clarify for another)",
        "bexonbanon (will bring for another)",
        "boxonbanon (will take for another)"
      ]
    },
    {
      "form": "-banon",
      "meaning": "future tense: will do",
      "usage": "Used with middle -xon-; does not require -ra in the pronoun",
      "examples": [
        "axonbanon (will do it for another)",
        "ixonbanon (will be it for another)"
      ]
    },
    {
      "form": "-ai",
      "meaning": "present tense: I do, currently doing",
      "usage": "Used with middle -xon-; does require -ra in the pronoun",
      "examples": [
        "axonai (I do it for another)",
        "keyoresai (it's all finishing)"
      ]
    },
    {
      "form": "-res",
      "meaning": "purely this action, focused action",
      "usage": "Emphasizes the specific action itself",
      "examples": [
        "keyoresai (its all finishing - keyo- + -res + -ai)"
      ]
    },
    {
      "form": "-kan",
      "meaning": "and, conjunction",
      "usage": "Connects clauses or questions",
      "examples": [
        "ramakan (and now?)"
      ]
    },
    {
      "form": "-ra",
      "meaning": "marker for transitive pronouns",
      "usage": "Required with certain tense suffixes like -ai; marks the object of the action",
      "examples": [
        "enra (I, transitive with -ra)",
        "nokon shinanra (with the scattered mind)"
      ]
    }
  ],
